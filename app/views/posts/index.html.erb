<div class="admin-index">
  <div class="header">
    <h1>Blog Posts</h1>
    <div>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="table-headers">
    <div style="width: 20%;">Post Title:</div>
    <div style="width: 50%;">Post Body:</div>
    <div style="width: 30%;">Actions:</div>
  </div>
  <% @posts.each do |post| %>
    <div class="blog-table-rows">
      <div style="width: 20%;"><%= post.title %></div>
      <div style="width: 50%;"><%= raw(post.body.truncate(200)) %></div>
      <div style="width: 10%;"><%= link_to 'Show', post %></div>
      <div style="width: 10%;"><%= link_to 'Edit', edit_post_path(post) %></div>
      <div style="width: 10%;"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>
</div>