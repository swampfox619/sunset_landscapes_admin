<!DOCTYPE html>
<html>
  <head>
    <title>Workspace</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Gravitas+One|Ultra" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="main-container">
      <header>
        <div class="logo">
          <%= link_to (root_path) do %>
            <%= image_tag('logo', width: '75px', height: '75px') %>
          <% end %>
        </div>
        <div>
          <ul class="nav">
            <li><%= link_to('Home', root_path) %></li>
            <li><%= link_to('Gallery', gallery_path) %></li>
            <li><%= link_to('Services', services_path) %></li>
            <li><%= link_to('About', about_path) %></li>
            <li><%= link_to('Our Blog', blog_path) %></li>
            <li><%= link_to('Contact', contact_path) %></li>
          </ul>
          <% if current_user %>
          <div class="admin-nav">
            <div id="admin-nav-header">
              <h5 class="admin-panel-hide">Admin Panel:<h5>
            </div>
            <ul class="admin-list">
              <li><%= link_to("Sign Out", destroy_user_session_path, method: :delete)  %></li>
              <li><%= link_to('Edit Gallery Images', images_path) %></li>
              <li><%= link_to('Edit Testimonials', testimonials_path) %></li>
              <li><%= link_to('Edit Specials', specials_path) %></li>
              <li><%= link_to('Edit Blogs', posts_path) %></li>
            </ul>
          </div>
          <% end %>
        </div>
      </header>
      <div class="white-line"></div>
      <div class="green-band">
        <% if current_user %>
          <span class="notice"><%= notice %></span> <span class="alert"><%= alert %></span>
        <% end %>
      </div>
      <%= yield %>
      <footer>
        <div class="footer-logo">
          <%= link_to (root_path) do %>
            <%= image_tag('logo', width: '75px', height: '75px') %>
          <% end %>
        </div>
        <ul class="nav">
          <li><%= link_to('Home', root_path) %></li>
          <li><%= link_to('Gallery', gallery_path) %></li>
          <li><%= link_to('Services', services_path) %></li>
          <li><%= link_to('About', about_path) %></li>
          <li><%= link_to('Our Blog', blog_path) %></li>
          <li><%= link_to('Contact', contact_path) %></li>
          <li><%= link_to 'Admin Log In', new_user_session_path %></li>
        </ul>
      </footer>
      <div class="white-line"></div>
      <div class="green-band"></div>
    </div>
    <script src="lightbox.js"></script>
  </body>
</html>

