<div class="admin-index">
  <div class="header">
    <h1>Testimonials</h1>
    <div>
      <%= link_to 'New Testimonial', new_testimonial_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="table-headers">
    <div style="width: 20%;">Client Name:</div>
    <div style="width: 50%;">Client Testimonial:</div>
    <div style="width: 30%;">Actions:</div>
  </div>
  <% @testimonials.each do |testimonial| %>
    <div class="table-rows">
      <div style="width: 20%;"><%= testimonial.title %></div>
      <div style="width: 50%;"><%= testimonial.description %></div>
      <div style="width: 10%;"><%= link_to 'Show', testimonial %></div>
      <div style="width: 10%;"><%= link_to 'Edit', edit_testimonial_path(testimonial) %></div>
      <div style="width: 10%;"><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>
</div>